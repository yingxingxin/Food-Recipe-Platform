<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.foodrecipeplatform.Controller.FriendsListController" prefWidth="600" prefHeight="400">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Friends List" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <ListView fx:id="friendsListView" prefHeight="150" />

        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="addFriendTextField" promptText="Enter friend's display name" />
            <Button fx:id="addFriendButton" text="Add Friend" onAction="#addFriendButtonClicked"/>
            <Button fx:id="removeFriendButton" text="Remove Friend" onAction="#removeFriendButtonClicked"/>
        </HBox>

        <Label text="Pending Friend Requests" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <ListView fx:id="pendingRequestsListView" prefHeight="100" />

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="acceptButton" text="Accept Request" onAction="#acceptFriendRequest" />
            <Button fx:id="declineButton" text="Decline Request" onAction="#declineFriendRequest" />
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
    </VBox>
</AnchorPane>
